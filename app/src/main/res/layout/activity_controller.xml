                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_add_command_button"
                        style="?borderlessButtonStyle"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/blue_dashed_circle_button"
                        android:foreground="@drawable/ic_add_black_24dp"
                        android:foregroundTint="@color/colorFont"
                        android:padding="20dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.scientificrat.robocon2017blecontrol.widget.ble.BleTouchTriggerButton
                        android:id="@+id/button6"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/left_moon_like_button"
                        android:fontFamily="sans-serif"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0.6">

                        <ImageView
                            android:id="@+id/moon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/big_moon">

                        </ImageView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@id/moon"
                            android:layout_centerInParent="true">

                            <com.scientificrat.robocon2017blecontrol.widget.ble.BleClickTriggerButton
                                android:id="@+id/left_up_btn"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/dark_yellow_circle"
                                clickedCommand="0a0d31610d0a"
                                />

                            <com.scientificrat.robocon2017blecontrol.widget.ble.BleClickTriggerButton
                                android:id="@+id/left_down_btn"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/dark_yellow_circle"
                                clickedCommand="0a0d31620d0a"/>

                            <com.scientificrat.robocon2017blecontrol.widget.ble.BleClickTriggerButton
                                android:id="@+id/left_left_btn"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/dark_yellow_circle"
                                clickedCommand="0a0d31630d0a"/>

                            <com.scientificrat.robocon2017blecontrol.widget.ble.BleClickTriggerButton
                                android:id="@+id/left_right_btn"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/dark_yellow_circle"
                                clickedCommand="0a0d31640d0a"/>


                            <Button
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/dark_yellow_circle" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <com.scientificrat.robocon2017blecontrol.widget.ble.BleTouchTriggerButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/right_moon_like_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="7"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <com.scientificrat.robocon2017blecontrol.widget.ble.BleTouchTriggerButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:backgroundTint="@color/colorYellow"
                            android:elevation="5dp"
                            android:foreground="@drawable/ic_keyboard_arrow_left_black_24dp"
                            android:foregroundGravity="center"
                            android:foregroundTint="@color/colorFont" />

                        <com.scientificrat.robocon2017blecontrol.widget.ble.BleClickTriggerButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorYellow"
                            android:elevation="5dp"
                            android:text="复位"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.scientificrat.robocon2017blecontrol.widget.ble.BleTouchTriggerButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorYellow"
                            android:elevation="5dp"
                            android:foreground="@drawable/ic_keyboard_arrow_up_black_24dp"
                            android:foregroundGravity="center"
                            android:foregroundTint="@color/colorFont" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"

                            android:layout_weight="0.8" />

                        <com.scientificrat.robocon2017blecontrol.widget.ble.BleTouchTriggerButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorYellow"
                            android:elevation="5dp"
                            android:foreground="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:foregroundGravity="center"
                            android:foregroundTint="@color/colorFont" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <com.scientificrat.robocon2017blecontrol.widget.ble.BleTouchTriggerButton
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8"
                            android:backgroundTint="@color/colorYellow"
                            android:elevation="5dp"
                            android:foreground="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:foregroundGravity="center"
                            android:foregroundTint="@color/colorFont" />

                        <com.scientificrat.robocon2017blecontrol.widget.ble.BleClickTriggerButton
                            android:id="@+id/launch_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorYellow"
                            android:elevation="5dp"
                            android:text="发射"
                            android:textSize="18sp"
                            clickedCommand="0a0d316B0d0a"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:id="@+id/left_drawer_layout"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="8dp">

            <ScrollView
                android:id="@+id/data_receive_scrollview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/data_receive_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:text="" />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/receive_panel_ascii_toggle_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorLightBlue"
                    android:textOff="HEX"
                    android:textOn="ASCII" />

                <Button
                    android:id="@+id/clear_receive_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorLightBlue"
                    android:text="清空" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/right_drawer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/colorSecond"
            android:orientation="vertical">

            <ListView
                android:id="@+id/device_listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorSecond" />

            <Button
                android:id="@+id/connect_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/blue_dashed_circle_button"
                android:text="连接" />

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

    <include layout="@layout/hide_panel"/>

</android.support.design.widget.CoordinatorLayout>


